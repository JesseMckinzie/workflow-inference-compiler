steps:
- touch:
    in:
      filename: !ii empty.txt
    out:
    - file: !& file_touch
- append:
    in:
      str: !ii Hello
      file: !* file_touch
    out:
    - file: !& file_append_1
- append:
    in:
      str: !ii World!
      file: !* file_append_1
    out:
    - file: !& file_append_2
- cat:
    in:
      file: !* file_append_2
